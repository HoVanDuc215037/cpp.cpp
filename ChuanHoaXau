#include <iostream>
#include <string>

using namespace std;

int main()
{
    string str;
    getline(cin, str);
    {
        using std::cout;
        using std::cin;
//xoa cach
        for (int i = 0; i<str.size(); i++){
            if (str[0] == ' '){
                str.erase(0,1);
            }
            while ((str[i] == ' ')&&(str[i+1] == ' ')){
                str.erase(i +1, 1);
            }
            while (str[str.size() - 1] == ' '){
                str.erase(str.size() - 1,1);
            }           
        }
  //chinh sua viet hoa
        for (int i = 0; i<str.size(); i++){
            if ((str[i] >= 'A')&&(str[i] <= 'Z')){
                str[i]+=32;
            }
        }
        str[0]-=32;
        for (int i = 1; i<str.size(); i++){
            if ((str[i] >= 'a')&&(str[i] <= 'z')&&(str[i-1] == ' ')){
                str[i]-=32;
            }
        }
        
    }
    
    std::cout << str;
    return 0;
}
